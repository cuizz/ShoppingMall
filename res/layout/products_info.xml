<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_shoe" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_below="@id/imageView1"
                android:layout_margin="@dimen/activity__margin_bottom" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:text="智能手机" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="原价：1999"
                    android:textColor="@color/text_sizes"
                    android:textSize="@dimen/middle_textsize" />

                <ImageView
                    android:id="@+id/phoneimageview"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_phone" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/phoneimageview"
                    android:src="@drawable/ic_share" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView3"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="12dp"
                    android:text="999"
                    android:textColor="@color/top_background"
                    android:textSize="@dimen/large_textsize" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView3"
                    android:layout_alignRight="@+id/imageView2"
                    android:text="@string/share"
                    android:textColor="@color/text_sizes"
                    android:textSize="@dimen/middle_textsize" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView13"
                    android:layout_alignBottom="@+id/textView13"
                    android:layout_alignParentRight="true"
                    android:text="@string/phone"
                    android:textColor="@color/text_sizes"
                    android:textSize="@dimen/middle_textsize" />
            </RelativeLayout>

            <View
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/rl" >
            </View>

            <LinearLayout
                android:id="@+id/lll"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@id/ll"
                android:layout_marginBottom="@dimen/activity__margin_bottom" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity__margin_bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="快递：0.0"
                    android:textColor="@color/text_sizes"
                    android:textSize="@dimen/middles_textsizes" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="月销999"
                    android:textColor="@color/text_sizes"
                    android:textSize="@dimen/middles_textsizes" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity__margin_bottom"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="山东济南"
                    android:textColor="@color/text_sizes"
                    android:textSize="@dimen/middles_textsizes" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rll"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@id/lll" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="和谐广场对面"
                    android:textColor="@color/text_sizes"
                    android:textSize="@dimen/middles_textsizes" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/xiangyou" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="27dp"
                    android:layout_toLeftOf="@+id/textView9"
                    android:text="41.6km" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="31dp"
                    android:layout_toLeftOf="@+id/imageView5"
                    android:text="去这里"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <View
                android:id="@+id/l"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity__margin_top"
                android:layout_below="@id/rll"
                android:background="@color/my_background_jianxi" >
            </View>

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@id/l" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity__margin_bottom"
                    android:text="选择 颜色分类 尺寸" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/xiangyou" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView10"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_marginRight="14dp"
                    android:layout_toLeftOf="@+id/imageView6"
                    android:text="完善尺码"
                    android:textColor="@color/text_sizes"
                    android:textSize="@dimen/middles_textsizes" />
            </RelativeLayout>

            <View
                android:id="@+id/lts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity__margin_top"
                android:layout_below="@id/rel"
                android:background="@color/my_background_jianxi" >
            </View>
            <com.example.shoppingmall.customview.MyListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_below="@id/lts"
                android:layout_height="wrap_content">
                
            </com.example.shoppingmall.customview.MyListView>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/shoper" />
	<View android:layout_height="match_parent"
	    android:layout_width="1dp"
	    android:background="#AAAAAA"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/collect2x" />

        <Button
            android:id="@+id/cartButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/carts"
            android:text="加入购物车"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/payButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/carts_buy"
            android:text="立即购买"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>