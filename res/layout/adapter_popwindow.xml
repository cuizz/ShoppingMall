<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/notuse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notuse"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/titleHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_White"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_adapter_grid_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@color/top_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity__margin_top"
                    android:text="999"
                    android:textColor="@color/top_background"
                    android:textSize="@dimen/normal_textsize" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity__margin_bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity__margin_top"
                        android:text="库存56件"
                        android:textSize="@dimen/middle_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity__margin_top"
                        android:text="已售56件"
                        android:textSize="@dimen/middle_textsize" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity__margin_top"
                    android:layout_marginTop="@dimen/activity__margin_bottom"
                    android:text="请选择商品规格"
                    android:textSize="@dimen/middle_textsize" />
            </LinearLayout>

            <ImageView
                android:id="@+id/pop_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity__margin_top"
                android:layout_marginTop="@dimen/activity__margin_top"
                android:gravity="right"
                android:src="@drawable/abc_ic_clear_search_api_holo_light" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_White" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/prensetPro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_Gray_light"
                    android:orientation="vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_Gray" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/lll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="购买数量" />

        <TextView
            android:id="@+id/pop_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/zhijiao_gray"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:text="一"
            android:textColor="@color/tv_Black" />

        <TextView
            android:id="@+id/pop_num"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/zhijiao_gray"
            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/tv_Black" />

        <TextView
            android:id="@+id/pop_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/zhijiao_gray"
            android:paddingBottom="10dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="10dp"
            android:text="+"
            android:textColor="@color/tv_Black" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lll"
        android:background="@color/bg_Gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/pop_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/view"
            android:layout_gravity="center"
            android:background="@color/carts"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/tv_White" />
         <Button
            android:id="@+id/buyButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_below="@id/view"
            android:layout_gravity="center"
            android:background="@color/tv_Red"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/carts_buy" />
    </LinearLayout>

</LinearLayout>