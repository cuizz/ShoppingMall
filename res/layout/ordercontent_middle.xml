<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shoppingmall.MainActivity" >
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView  android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity__margin_top"
            android:src="@drawable/liangpin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity__margin_bottom"
                android:textSize="@dimen/normal_textsize"
                android:text="商品名称"/>
            <TextView android:id="@+id/jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity__margin_bottom"
                android:textSize="@dimen/middle_textsize"
                android:textColor="@color/edittext_hint"
                android:text="商品简介"/>
            <TextView android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/activity__margin_bottom"
                android:textSize="@dimen/normal_textsize"
                android:textColor="@color/top_background"
                android:text="100"/>
        </LinearLayout>
        <TextView android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:layout_margin="@dimen/activity__margin_top"
            android:text="x1"/>
    </LinearLayout>
   

</LinearLayout>
