<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background_jianxi"
    android:orientation="vertical"
    tools:context="com.example.shoppingmall.MainActivity" >

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/top_background" >

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/returnnn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="添加新地址"
            android:textColor="@color/white"
            android:textSize="@dimen/large_textsize" />
        <TextView  android:id="@+id/suretextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="确定"
            android:layout_marginRight="@dimen/activity__margin_bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/large_textsize" />
        
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity__margin_top"
            android:text="收货人"
            android:textSize="@dimen/large_textsize" />

        <EditText  android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity__margin_top"
            android:background="@color/white"
            android:hint="请输入收货人"
            android:textColorHint="@color/edittext_hint"
            android:textSize="@dimen/large_textsize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity__margin_top"
            android:text="联系电话"
            android:textSize="@dimen/large_textsize" />

        <EditText  android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity__margin_top"
            android:background="@color/white"
            android:hint="请输入手机号码"
             android:textColorHint="@color/edittext_hint"
            android:textSize="@dimen/large_textsize" />
    </LinearLayout>

    <RelativeLayout  android:id="@+id/choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity__margin_top"
            android:text="所在地区"
            android:textSize="@dimen/large_textsize" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/xiangyou" />

        <TextView  android:id="@+id/choicetextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/activity__margin_top"
            android:layout_toLeftOf="@+id/imageView1"
            android:text="请选择"
            android:textColor="@color/edittext_hint"
            android:textSize="@dimen/large_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <EditText  android:id="@+id/xiangxiET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:hint="请填写详细地址不少于5个字"
            android:textColor="@color/edittext_hint"
            android:textColorHint="@color/edittext_hint"
            android:textSize="@dimen/normal_textsize" />
    </LinearLayout>

</LinearLayout>